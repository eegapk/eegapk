<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.itss.kahm.eegappv3.RegistroDActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">

     <android.support.v7.widget.CardView
         android:layout_height="wrap_content"
         android:layout_width="match_parent">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:gravity="center">

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/etNombreD"
                 android:hint="Nombre"/>

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/etApellidoD"
                 android:hint="Apellido"/>

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/etCedulaD"
                 android:hint="Cedula"/>
             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/etNTlfPD"
                 android:hint="Telefono personal"/>
             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/etNTlfO"
                 android:hint="Telefono de Oficina"/>
             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/etEspecialidaD"
                 android:hint="Especialidad"/>

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="textEmailAddress"
                 android:id="@+id/etEmail"
                 android:hint="Email"/>

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/etClave"
                 android:hint="Clave"/>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Registrar"
                 android:id="@+id/btnRegistrarD"
                 />
         </LinearLayout>

     </android.support.v7.widget.CardView>

</LinearLayout>
